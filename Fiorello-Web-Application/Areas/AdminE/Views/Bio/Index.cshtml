@model Bio
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminE/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    count++;
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category Table</h4>
                <p class="card-description">
                    <a asp-controller="Bio" asp-action="Create" class="btn btn-primary">Create</a>
                    <a asp-controller="Bio" asp-action="DeleteAll" class="btn btn-danger">Delete All Data!!</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Count</th>
                                    <th>Author</th>
                                    <th>FaceBook</th>
                                    <th>Linkedin</th>
                                    <th>Image</th>
                                    <th>Setting</th>
                                </tr>
                            </thead>
                            <tbody>


                                <tr>
                                    <td>@count</td>
                                    <td>@Model.Author</td>
                                    <td>@Model.Facebook</td>
                                    <td>@Model.Linkedin</td>
                                    <td><img style="width:200px;height:50px;" src="~/img/@Model.Imageurl" /></td>
                                    <td>
                                        <a class="btn btn-danger" asp-controller="Bio" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                                        <a class="btn btn-dark" asp-controller="Bio" asp-action="Updatem" asp-route-id="@Model.Id">Update</a>
                                        <a class="btn btn-success" asp-controller="Bio" asp-action="Detail" asp-route-id="@Model.Id">Detail</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    </div>
        </div>
    </div>
</div>


